<h1 id="header">Burger Time!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6" id="uneatenBurgs">
            <h2 class= "subheading">Ready to Eat:</h2>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        <button class="change-eat" data-id="{{id}}" data-newdevour="{{devoured}}">
		                        {{burger_name}}
	                    </button>
                        <br>
                        <br>
                    {{/unless}}
                 {{/each}}
            </ul>
        </div>

        <div class="col-md-6" id="eatenBurgs">
            <h2 class= "subheading">Eaten Burgers:</h2>
            <ul>
                {{#each burger}}
                    {{#if devoured}}
                        <div class="burgerEaten">
                            {{burger_name}}
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>  
    </div>
<br><br>
<div id="addBurger">
<h2 class= "subheading">Add your own burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit" class="add">Add Burger</button>
</form>
</div>

</div>
 